<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.project.mapper.BoardAttachMapper">	
    	<!-- 첨부파일 등록 -->
    	<insert id="insert">
    		insert into trade_attach (uuid, uploadPath, fileName, filetype, bno)
    		values (#{uuid}, #{uploadPath}, #{fileName}, #{filetype}, #{bno})
    	</insert>
    	
    	<!-- 첨부파일 삭제 -->
    	<delete id="delete">
    		delete from trade_attach where uuid = #{uuid}
    	</delete>
    	
    	<!-- 첨부파일 조회 -->
    	<select id="findByBno" resultType="com.project.model.BoardAttachVO">
    		select * from trade_attach where bno = #{bno}
    	</select>
    	
    	<!-- 게시물과 첨부파일 동시삭제 -->
    	<delete id="deleteAll">
    		delete from trade_attach where bno = #{tradeBno}
    	</delete>
    	
</mapper>